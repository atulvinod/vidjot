

<div class="container">
 
    <div class="well" style="box-shadow:0px 0px 5px black">
        <h1>Add an idea..</h1><hr>
           {{#each error}}
    <div class="alert alert-danger">{{text}}</div>
    {{else}}

    {{/each}}
        <form action="/ideas/upload" method="POST">

            <label for="ideaName">Idea Name</label>
            <input type="text" name="ideaName" id="" class="form-control" required>
            <br><hr>
            <label for="idea">Idea</label>
            <textarea name="idea" id="" class="form-control" required></textarea>
            <br>
  

            <input type="submit" name="" id="" class="btn btn-primary" value="Submit">

        </form>
    </div>
</div>